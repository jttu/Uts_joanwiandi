<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:gravity="center"    android:padding="16dp"    tools:context=".MainActivity">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="first activity"        android:textSize="20sp"/>    <EditText        android:id="@+id/et_input"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Masukan Kata" />    <Button        android:id="@+id/btn_second_activity"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Second Actvity"/>    <EditText        android:id="@+id/et_phone_number"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Nomor Telepon"        android:inputType="number" />    <Button        android:id="@+id/btn_second_activity_implicit"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Second Actvity"/></LinearLayout>